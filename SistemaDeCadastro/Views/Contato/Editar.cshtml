@model Contato
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
            <!-- <h5 class="modal-title">Modal title</h5> -->
            <h2 class="fw-bold mb-0">Editar</h2>
        </div>


        <div class="modal-body p-5 pt-0">
            <form asp-controller="Contato" asp-action="Alterar" method="post">
                 <input type="hidden" asp-for="Id"/>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Nome" class="form-control rounded-3" id="floatingInput"
                        placeholder="Nome Completo">
                    <label for="floatingInput">Nome</label>
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>

                <div class="form-floating mb-3">
                    <input type="email" asp-for="Email" class="form-control rounded-3" id="floatingInput"
                        placeholder="name@example.com">
                    <label for="floatingInput">Email</label>
                    @Html.ValidationMessageFor(x => x.Email) 
                </div>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="Celular" class="form-control rounded-3" id="floatingInput"
                        placeholder="(00)00000-0000" size="20" maxlength="15">
                    <label for="floatingInput">Telefone</label>
                    @Html.ValidationMessageFor(x => x.Celular)
                </div>
                <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Alterar</button>
                <a class="w-100 mb-2 btn btn-lg rounded-3 btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
            </form>
        </div>
    </div>
</div>
