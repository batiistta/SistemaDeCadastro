@model Usuario

@{
  ViewData["Title"] = "Perfil";
}

<div class="container">
  <div class="main-body">

    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                width="150">
              <div class="mt-3">
                <h4>@Model.Nome</h4>
                 <label for="foto" class="btn btn-outline-primary custom-file-upload">
                     Adicionar Foto
                    <input type="file" id="foto" name="Foto" style="display : none">
                 </label>                
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Nome Completo</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.Nome
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Email</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.Email
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Perfil</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.Perfil
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Data de Cadastro</h6>
              </div>
              <div class="col-sm-9 text-secondary">
                @Model.DataCadastro
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Senha</h6>
              </div>
              <div class="col-sm-9 text-secondary" type="password">
                @Model.Senha
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-12">
                <a role="button" class="btn btn-primary" asp-action="Editar" asp-controller="Usuario"
                  asp-route-id="@Model.Id">Editar</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>

